<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.ptc.com/schema/mvc"	
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
http://www.ptc.com/schema/mvc http://www.ptc.com/schema/mvc/mvc-10.0.xsd">

	<!-- Configurations in this file override all other configurations -->
	<mvc:builder-scan base-package="com.catl.part.relation"/>
	<mvc:builder-scan base-package="com.catl.doc.relation"/>
	<mvc:builder-scan base-package="com.catl.promotion.mvc"/>
    <mvc:builder-scan base-package="com.catl.change.mvc"/>
    <mvc:builder-scan base-package="com.catl.change.inventory.builder" />
    <mvc:builder-scan base-package="com.catl.part.classification.mvc.builders" />
    <mvc:builder-scan base-package="com.catl.doc.maturityUpReport.mvc.builders" />
	<mvc:builder-scan base-package="com.catl.ecad.mvc.builders" />
	<mvc:builder-scan base-package="com.catl.doc.soft.builders" />
	<mvc:builder-scan base-package="com.catl.require.builder" />
   
	<bean id="affectedItemsTable"      class="com.catl.change.mvc.AffectedItemsTableBuilder" />
	<bean class ="com.catl.process.mvc.builder.ProcessStatusTableBuilder"/>
	
	<context:component-scan base-package="com.catl.line,com.catl.ri,com.catl.pd,com.catl.battery,com.catl.require" />
	<bean class="org.springframework.web.servlet.view.BeanNameViewResolver">  
		<property name="order" value="1" /> 
	</bean> 
	<bean id="jsonView" class="org.springframework.web.servlet.view.json.MappingJackson2JsonView">
	</bean>  
    <bean id="multipartResolver"
		class="com.catl.line.util.UploadResolver">
			<property name="maxUploadSize" value="102400000" />
		<property name="defaultEncoding" value="UTF-8"/>
	</bean>

</beans>
			<component name="ext.ptc.xworks.examples.taskform.ExampleBomStructureTreeTableBuilder"/>
		</action>
		
		<action name="itemPickerExample1" ajax="row">
			<command url="netmarkets/jsp/xworks/example/itemPickerExample1.jsp" class="com.ptc.core.components.forms.DefaultObjectFormProcessor" windowType="popup" />
		</action>
		
		<action name="itemPickerExample2" ajax="row">
			<command url="netmarkets/jsp/xworks/example/itemPickerExample2.jsp" class="com.ptc.core.components.forms.DefaultObjectFormProcessor" windowType="popup" />
		</action>
		
